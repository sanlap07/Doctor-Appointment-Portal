<!-- Featured Doctors -->
<% if (doctors.length > 0) { %>
<section class="py-5 bg-light">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="fw-bold">Featured Doctors</h2>
            <p class="text-muted">Meet our expert healthcare professionals</p>
        </div>
        
        <div class="row g-4">
            <% doctors.slice(0, 6).forEach(doctor => { %>
                <div class="col-lg-4 col-md-6">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body p-4 text-center">
                            <img src="<%= doctor.profileImage %>" alt="Dr. <%= doctor.name %>" class="rounded-circle mb-3" style="width: 80px; height: 80px; object-fit: cover;">
                            <h5 class="fw-bold">Dr. <%= doctor.name %></h5>
                            <p class="text-primary mb-2"><%= doctor.specialization %></p>
                            <p class="text-muted small mb-3"><%= doctor.department %></p>
                            <p class="text-muted small mb-3"><%= doctor.experience %> years experience</p>
                            <p class="fw-bold text-success mb-3">â‚¹<%= doctor.consultationFee %></p>
                            <div class="d-grid gap-2">
                                <a href="/doctor/<%= doctor._id %>" class="btn btn-outline-primary">View Profile</a>
                                <% if (locals.user) { %>
                                    <a href="/appointments/book/<%= doctor._id %>" class="btn btn-primary">Book Appointment</a>
                                <% } else { %>
                                    <a href="/auth/login" class="btn btn-primary">Login to Book</a>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
        
        <div class="text-center mt-4">
            <a href="/search" class="btn btn-primary btn-lg">View All Doctors</a>
        </div>
    </div>
</section>
<% } %>

