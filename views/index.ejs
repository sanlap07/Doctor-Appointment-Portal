

<!-- Hero Section -->
<section class="hero-section bg-primary text-white py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-4">Find & Book Appointments with Top Doctors</h1>
                <p class="lead mb-4">Connect with qualified healthcare professionals and book appointments online. Your health is our priority.</p>
                
                <!-- Search Form -->
                <div class="card bg-white p-4 shadow">
                    <form action="/search" method="GET">
                        <div class="row g-3">
                            <div class="col-md-8">
                                <input type="text" class="form-control form-control-lg" name="query" placeholder="Search by doctor name, specialization, or department...">
                            </div>
                            <div class="col-md-4">
                                <select class="form-select form-select-lg" name="department">
                                    <option value="all">All Departments</option>
                                    <% departments.forEach(dept => { %>
                                        <option value="<%= dept %>"><%= dept %></option>
                                    <% }) %>
                                </select>
                            </div>
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary btn-lg w-100">
                                    <i class="fas fa-search me-2"></i>Find Doctors
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-lg-6">
                <img src="/images/Doctor.jpg" alt="Doctor" class="img-fluid rounded shadow" style="max-height: 400px; object-fit: cover;">
            </div>
        </div>
    </div>
</section>

<!-- Services Section -->
