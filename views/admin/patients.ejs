

<div class="container-fluid py-4">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-lg-2 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white">
                    <h6 class="mb-0">
                        <i class="fas fa-cog me-2"></i>
                        Admin Panel
                    </h6>
                </div>
                <div class="list-group list-group-flush">
                    <a href="/admin/dashboard" class="list-group-item list-group-item-action">
                        <i class="fas fa-tachometer-alt me-2"></i>
                        Dashboard
                    </a>
                    <a href="/admin/doctors" class="list-group-item list-group-item-action">
                        <i class="fas fa-user-md me-2"></i>
                        Manage Doctors
                    </a>
                    <a href="/admin/patients" class="list-group-item list-group-item-action active">
                        <i class="fas fa-users me-2"></i>
                        Manage Patients
                    </a>
                    <a href="/admin/appointments" class="list-group-item list-group-item-action">
                        <i class="fas fa-calendar-alt me-2"></i>
                        Manage Appointments
                    </a>
                    <a href="/admin/customization" class="list-group-item list-group-item-action">
                        <i class="fas fa-code me-2"></i>
                        Developer Tools
                    </a>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-lg-10">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="fw-bold">Manage Patients</h2>
                <span class="badge bg-info fs-6"><%= patients.length %> Total Patients</span>
            </div>

            <!-- Patients List -->
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">All Patients</h5>
                </div>
                <div class="card-body p-0">
                    <% if (patients.length === 0) { %>
                        <div class="text-center py-5">
                            <i class="fas fa-users fa-3x text-muted mb-3"></i>
                            <h4 class="text-muted">No patients registered</h4>
                            <p class="text-muted">Patients will appear here once they register on the website.</p>
                        </div>
                    <% } else { %>
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Patient</th>
                                        <th>Contact</th>
                                        <th>Age</th>
                                        <th>Gender</th>
                                        <th>Registration Date</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% patients.forEach(patient => { %>
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <img src="<%= patient.profileImage %>" alt="<%= patient.firstName %>" class="rounded-circle me-3" style="width: 40px; height: 40px; object-fit: cover;">
                                                    <div>
                                                        <strong><%= patient.firstName %> <%= patient.lastName %></strong>
                                                        <small class="text-muted d-block"><%= patient.email %></small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <div>
                                                    <small class="text-muted d-block"><%= patient.phone %></small>
                                                    <% if (patient.address && patient.address.city) { %>
                                                        <small class="text-muted"><%= patient.address.city %>, <%= patient.address.state %></small>
                                                    <% } %>
                                                </div>
                                            </td>
                                            <td>
                                                <%= new Date().getFullYear() - new Date(patient.dateOfBirth).getFullYear() %> years
                                            </td>
                                            <td><%= patient.gender %></td>
                                            <td>
                                                <%= new Date(patient.createdAt).toLocaleDateString() %>
                                            </td>
                                            <td>
                                                <% if (patient.isActive) { %>
                                                    <span class="badge bg-success">Active</span>
                                                <% } else { %>
                                                    <span class="badge bg-danger">Inactive</span>
                                                <% } %>
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <button class="btn btn-outline-info" onclick="viewPatient('<%= patient._id %>')">
                                                        <i class="fas fa-eye"></i>
                                                    </button>
                                                    <button class="btn btn-outline-primary" onclick="editPatient('<%= patient._id %>')">
                                                        <i class="fas fa-edit"></i>
                                                    </button>
                                                    <button class="btn btn-outline-warning" onclick="togglePatientStatus('<%= patient._id %>', '<%= patient.isActive %>')">
                                                        <i class="fas fa-<%= patient.isActive ? 'ban' : 'check' %>"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function viewPatient(patientId) {
    alert('Patient details view would be implemented here.');
}

function editPatient(patientId) {
    alert('Patient edit functionality would be implemented here.');
}

function togglePatientStatus(patientId, currentStatus) {
    const action = currentStatus === 'true' ? 'deactivate' : 'activate';
    if (confirm(`Are you sure you want to ${action} this patient?`)) {
        alert(`Patient ${action} functionality would be implemented here.`);
    }
}
</script>